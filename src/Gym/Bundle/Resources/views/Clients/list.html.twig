{% extends '::base.html.twig' %}

{% block content %}
    <div class="filter">
        {% block filter %}
        {% endblock %}
    </div>

    {% block listing %}
    <table class="list">
        <thead>
            <tr>
                <th class="code">Code</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
        <tr>
            <td>{{ client.code }}</td>
            <td>{{ client|fullname }}</td>
            <td><a href="{{ path("show_client", {id: client.id}) }}">View</a> </td>
        </tr>
        {% endfor %}

    </table>
    <div class="navigation">
        {{ knp_pagination_render(clients) }}
    </div>
    {% endblock %}
{% endblock %}