{% extends '@Gym/Client/show.html.twig' %}
{% block title_addition %}
    {{ "Visits"|trans }}
{% endblock %}
{% block client_view %}
    {% embed '::listing.html.twig' %}
        {% block listing_head %}
            <tr>
                <th class="short-date">{{ "Date"|trans }}</th>
                <th class="time">{{ "Start"|trans }}</th>
                <th class="time">{{ "End"|trans }}</th>
                <th>{{ "Duration"|trans }}</th>
            </tr>
        {% endblock %}

        {% block listing_body %}
            {% for visit in visits %}
                <tr>
                    <td>{{ visit.day.format('j M y') }}</td>
                    <td>{{ visit.enter.format('H:i') }}</td>
                    {% if visit.exit %}
                        <td>{{ visit.exit.format('H:i') }}</td>
                    {% else %}
                        <td><span class="badge badge-important">{{ "In the Club"|trans }}</span></td>
                    {% endif %}
                    <td class="duration">
                        {% if visit.exit %}
                            {{ visit.duration }}
                        {% else %}
                            <a href="{{ path("visit_finish", {id: visit.client.id}) }}">Finish visit</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(visits) }}
    </div>
{% endblock %}